<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ivCategoria"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_list_placeholder"
        android:contentDescription="Ícone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/tvNomeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2EE4B3"
            android:textStyle="bold"
            android:text="Item" />

        <TextView
            android:id="@+id/tvDetalheItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 un • Frutas" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbComprado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok" />

</LinearLayout>
